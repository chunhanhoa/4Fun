#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
void Vecay(int a)
{
	for(int i=1;i<=a;i++)
	{
		for(int j=1;j<=a-i;j++)
		{
			printf(" ");
		}
			for(int b=1;b<=2*i-1;b++)
			{
				printf("*");
			}
		printf("\n");
	}
	
	for (int i=1;i<=a/2;i++) 
	{
        for (int j=1;j<=a-1;j++) 
		{
            printf(" ");
        }
        printf("*\n");
    }
}
int main()
{
	int a;
	scanf("%d",&a);
	Vecay(a);
	printf("CÃ¢y ThÃ´ng Noel nÃ¨ðŸŽ„, Æ¯á»›c Äi Sáº½ ThÃ nh Hiá»‡n Thá»±c ÄÃ³:>\nGiÃ¡ng Sinh Vui Váº» Nha â›„");
	return 0; 
}
